doctype html
html(lang='en')
  head
    include partials/head.jade

    // Custom styles for this template
    link(href='/css/cover.css', rel='stylesheet')
    link(href='/css/blog.css', rel='stylesheet')
    
  body(class='#{content.imageClass}')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h1.masthead-brand #{content.heading}
              include partials/navigation-cover.jade
          .inner.cover.blog
            h2.cover-heading #{content.subtitle}
              p.lead
                | #{content.bodyText}

            .row
              .col-sm-8
                .panel.panel-default
                  .panel-heading.home
                    h2.cover-heading Latest Post
                    .panel-body
                      h3 #{posts[0].title}
                      p.lead
                        | #{posts[0].body}
                      p
                        | #{posts[0].created}
              .col-sm-4
                .panel.panel-default
                  .panel-heading
                    h2.panel-title Recent Posts (#{numberOfBlogPosts})
                    ul
                    for post in posts
                      li
                        a(href='/blog/#{post.url}') #{post.title}

          include partials/footer-cover.jade
    
    include partials/analytics.jade
    
    script(src='/js/jquery-1.12.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/holder.js')
