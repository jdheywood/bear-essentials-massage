doctype html
html(lang='en')
  head
    include partials/head.jade

    // Custom styles for this template
    link(href='/css/cover.css', rel='stylesheet')
    
  body(class='#{imageClass}')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h1.masthead-brand #{heading}
              include partials/navigation-cover.jade
          .inner.cover
            h2.cover-heading #{subtitle}
            p.lead
              | #{bodyText}
            p.lead
              a.btn.btn-lg.btn-default(href='#') Learn more
          include partials/footer-cover.jade
    
    // Bootstrap core JavaScript
    // ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='/js/jquery-1.12.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/holder.js')
