doctype html
html(lang='en')
  head
    include ../partials/head

    // Custom styles for this template
    link(href='/css/cover.css', rel='stylesheet')
    link(href='/css/blog.css', rel='stylesheet')
    
  body(class='#{content.imageClass}')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h1.masthead-brand #{content.heading}
              include ../partials/navigation-cover
          .inner.cover.blog
            h2.cover-heading #{content.subtitle}
              p.lead
                | #{content.bodyText}

            .row
              .col-sm-8
                .panel.panel-default
                  .panel-heading.home
                    h2.cover-heading Latest Post
                    .panel-body
                      h3 #{posts[0].title}
                      p.lead
                        | !{posts[0].intro}
                      p
                        a(href='/blog/#{posts[0].url}') Continue reading...
              .col-sm-4
                .panel.panel-default
                  .panel-heading
                    h2.panel-title Recent Posts
                    .panel-body
                      ul.blog-recent
                      for post in posts
                        li
                          a(href='/blog/#{post.url}') #{post.title}

                .panel.panel-default
                  .panel-heading
                    h2.panel-title Tags
                    .panel-body.blog-tags
                      .table
                        ul.blog-tags
                          for tag in tags
                            li
                              a(href='/blog/tag/#{tag}') #{tag.toProperCase()}

          include ../partials/footer-cover
    
    include ../partials/analytics
    
    script(src='/js/jquery-1.12.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/holder.js')
