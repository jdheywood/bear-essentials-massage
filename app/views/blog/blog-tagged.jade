doctype html
html(lang='en')
  head
    include ../partials/head

    // Custom styles for this template
    link(href='/css/cover.css', rel='stylesheet')
    link(href='/css/blog.css', rel='stylesheet')
    
  body(class='#{content.imageClass}')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h1.masthead-brand #{content.heading}
              include ../partials/navigation-cover
          .inner.cover.blog.tagged
            h2.cover-heading #{content.subtitle}

            .row
              .col-sm-8
                for post in posts
                  .panel.panel-default
                    .panel-heading.home
                      h2.cover-heading #{post.title}
                      .panel-body
                        p.lead
                          | !{post.body}
                        p
                          | #{post.created}
              .col-sm-4
                .panel.panel-default
                  .panel-heading
                    h2.panel-title Recent Posts (#{numberOfBlogPosts})
                    ul
                    for post in posts
                      li
                        a(href='/blog/#{post.url}') #{post.title}

                .panel.panel-default
                  .panel-heading
                    h2.panel-title Tags (N)
                    ul
                      for tag in tags
                        li
                          a(href='/blog/tag/#{tag}') #{tag}

            p.lead
              a.btn.btn-lg.btn-default(href='/blog') All Posts

          include ../partials/footer-cover
    
    include ../partials/analytics
    
    script(src='/js/jquery-1.12.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/holder.js')
