doctype html
html(lang='en')
  head
    include partials/head.jade

    // Custom styles for this template
    link(href='/css/cover.css', rel='stylesheet')
    link(href='/css/contact.css', rel='stylesheet')
    
  body(class='#{content.imageClass}')
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix.prices
            .inner
              h1.masthead-brand #{content.heading}
              include partials/navigation-cover.jade
          .inner.cover.prices
            h2.cover-heading #{content.subtitle}
            p.lead
              | #{content.bodyText}
            .row
              .col-sm-12.opaque
                .alert.alert-info.contact(role='alert')
                  strong Email:<br/>
                  a.contact(href='mailto:patricia@bearessentialsmassage.co.uk?subject=General enquiry', target='_blank') patricia@bearessentialsmassage.co.uk
            .row
              .col-sm-12.opaque
                .alert.alert-info.contact(role='alert')
                  a.contact.fa.fa-facebook-square(href='https://www.facebook.com/bearessentialsmassageltd', target='_blank')  Facebook
            .row
              .col-sm-12.opaque
                .alert.alert-info.contact(role='alert')
                  a.contact.fa.fa-twitter-square(href='https://twitter.com/BearEssentials7', target='_blank')  Twitter
            .row
              .col-sm-12.opaque
                .alert.alert-info.contact(role='alert')
                  strong Telephone:<br/>
                  a.contact(href='tel:07754 312 622') 07754 312 622

            p.lead
              a.btn.btn-lg.btn-default(href='https://www.treatwell.co.uk/', id="wahanda-online-booking-widget", onclick='wahanda.openOnlineBookingWidget("https://widget.treatwell.co.uk/place/318199/menu/"); return false;', target="_blank")
                span
                  | Book now

            p.lead
              a.btn.btn-lg.btn-default(href='#{content.ctaLink}') #{content.ctaText}
                p.lead
                  .text-center.pad-top
                    a.btn.btn-lg.btn-default(href='/therapies') All Therapies

          .prices-footer
            include partials/footer-cover.jade
    
    include partials/analytics.jade

    script(src='/js/jquery-1.12.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/holder.js')
    script(src='https://widget.treatwell.co.uk/common/venue-menu/javascript/widget-button.js')

    script.
      (function () {
        var link = document.createElement("link");
        link.type = "text/css";
        link.href = "https://widget.treatwell.co.uk/common/venue-menu/css/widget-button.css";
        link.rel = "stylesheet";
        link.media = "screen";
        document.getElementsByTagName("head")[0].appendChild(link);
      }() );
